# YouTube Shorts Trend Analysis MVP Environment Variables

# YouTube Data API Configuration
# Get your API key from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# LLM Provider Configuration
# Supported providers: openai, anthropic, google-generativeai
LLM_PROVIDER=openai
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-4o-mini

# Application Settings
# Maximum daily quota usage (default: 8000 to stay within 10,000 limit)
MAX_DAILY_QUOTA=8000
# Rate limit for API requests per second
RATE_LIMIT_PER_SECOND=10

# Development Settings
# Set to true for debug logging
DEBUG=false
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Use mock LLM provider instead of real API calls (for testing/development)
USE_MOCK_LLM=false